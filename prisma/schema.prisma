generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  tickets   Ticket[]
}

model User {
  id         String   @id @default(uuid())
  name       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  role       Role     @default(SUPPORT)
  tickets    Ticket[]
  Exercise   Exercise @relation(fields: [exerciseId], references: [id])
  exerciseId String
}

model Ticket {
  id           Int       @id @default(autoincrement())
  title        String
  content      String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  startedAt    DateTime?
  closedAt     DateTime?
  priority     Priority  @default(LOW)
  area         Area      @default(SERVICESENTER)
  status       Status    @default(NEW)
  User         User      @relation(fields: [userId], references: [id])
  userId       String
  internalNote String?
  Exercise     Exercise  @relation(fields: [exerciseId], references: [id])
  exerciseId   String
}

enum Role {
  USER
  SUPPORT
}

enum Status {
  NEW
  IN_PROGRESS
  CLOSED
}

enum Area {
  SERVICESENTER
  HENDELSESSTYRING
  PROBLEMSTYRING
  ENDRINGSKONTROLL
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
